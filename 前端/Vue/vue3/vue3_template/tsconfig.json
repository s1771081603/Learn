{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs":true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny":false,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [ "webpack-env" ],
    "paths": {
      "@/*": [ "src/*" ],
      "@a/*": ["src/assets/*"],
      "@c/*": ["src/components/*"],
      "@v/*": ["src/views/*"],
      "@api/*": ["src/api/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.js",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "./src/lib",
    "./dist",
    "./template"
  ]
}
